# ContextOS Docker Environment Variables

# Server Configuration
PORT=3100
HOST=0.0.0.0
NODE_ENV=production

# Data Directory
DATA_DIR=/data

# Redis Configuration
REDIS_URL=redis://redis:6379
REDIS_PORT=6379

# Nginx (optional - enable with: docker-compose --profile proxy up)
HTTP_PORT=80
HTTPS_PORT=443

# API Keys (generate with: openssl rand -hex 32)
# ADMIN_API_KEY=ctx_your_admin_key_here

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# Rate Limiting
RATE_LIMIT_FREE=10
RATE_LIMIT_PRO=100
RATE_LIMIT_ENTERPRISE=1000

# Security
# JWT_SECRET=your_jwt_secret_here
# CORS_ORIGIN=https://yourdomain.com
