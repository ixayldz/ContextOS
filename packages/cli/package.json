{
    "name": "@contextos/cli",
    "version": "0.4.2",
    "description": "CLI for ContextOS - The Context Server Protocol for AI Coding",
    "type": "module",
    "bin": {
        "ctx": "./dist/index.js"
    },
    "main": "./dist/index.js",
    "types": "./dist/index.d.ts",
    "scripts": {
        "build": "tsup src/index.ts --format esm --clean",
        "dev": "tsup src/index.ts --format cjs --dts --watch",
        "start": "node dist/index.js",
        "test": "vitest run",
        "lint": "eslint src/",
        "clean": "rimraf dist"
    },
    "dependencies": {
        "@contextos/core": "workspace:*",
        "chalk": "^5.3.0",
        "clipboardy": "^4.0.0",
        "commander": "^12.0.0",
        "glob": "^10.3.0",
        "inquirer": "^9.2.0",
        "ora": "^8.0.0",
        "yaml": "^2.4.0"
    },
    "devDependencies": {
        "@types/inquirer": "^9.0.7",
        "@types/node": "^20.11.0",
        "eslint": "^8.57.0",
        "rimraf": "^5.0.5",
        "tsup": "^8.0.2",
        "typescript": "^5.4.0",
        "vitest": "^1.4.0"
    },
    "files": [
        "dist"
    ],
    "license": "MIT"
}
