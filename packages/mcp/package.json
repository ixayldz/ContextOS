{
    "name": "@contextos/mcp",
    "version": "0.3.0",
    "description": "Model Context Protocol server for ContextOS - enables all AI tools (Claude, Cursor, Codex, Gemini, Windsurf) to access optimized context",
    "type": "module",
    "main": "dist/index.js",
    "bin": {
        "contextos-mcp": "./dist/index.js"
    },
    "scripts": {
        "build": "tsup src/index.ts --format esm --clean",
        "dev": "tsx watch src/index.ts",
        "start": "node dist/index.js"
    },
    "dependencies": {
        "@modelcontextprotocol/sdk": "^0.5.0",
        "@contextos/core": "workspace:*"
    },
    "devDependencies": {
        "tsup": "^8.0.0",
        "tsx": "^4.7.0",
        "typescript": "^5.4.0"
    },
    "keywords": [
        "mcp",
        "model-context-protocol",
        "ai",
        "context",
        "cursor",
        "claude",
        "codex",
        "gemini",
        "windsurf",
        "contextos"
    ],
    "author": "ContextOS Team",
    "license": "MIT"
}